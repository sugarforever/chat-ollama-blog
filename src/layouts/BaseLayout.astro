---
import { getLangFromUrl, useTranslations } from '@/utils/i18n';
import '@/styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const metaDescription = description || t('meta.description');

// Use the configured site URL for production, fallback to Astro.url for development
const siteUrl = import.meta.env.SITE || Astro.site || Astro.url.origin;
const currentUrl = new URL(Astro.url.pathname, siteUrl);
const imageUrl = new URL('/logo.svg', siteUrl);
---

<!doctype html>
<html lang={lang} class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={metaDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="author" content="ChatOllama Team" />
    <meta name="robots" content="index, follow" />
    <meta name="keywords" content="ChatOllama, AI, chatbot, open source, artificial intelligence, machine learning, blog" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:site_name" content="ChatOllama Blog" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={metaDescription} />
    <meta property="twitter:image" content={imageUrl} />
    <meta property="twitter:creator" content="@ChatOllama" />
    <meta property="twitter:site" content="@ChatOllama" />

    <!-- Additional SEO -->
    <link rel="canonical" href={currentUrl} />
    <meta name="theme-color" content="#000000" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <link rel="apple-touch-icon" href="/logo.svg" />
  </head>
  <body class="h-full bg-white text-black font-sans antialiased">
    <div class="min-h-full flex flex-col">
      <header class="border-b border-gray-200">
        <nav class="max-w-4xl mx-auto px-6 py-4">
          <div class="flex items-center justify-between">
            <a href="https://chatollama.cloud" target="_blank" class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
              <img src="/logo.svg" alt="ChatOllama" class="h-8 w-auto" />
              <span class="text-lg font-semibold hidden sm:block">ChatOllama</span>
            </a>

            <div class="flex items-center space-x-4 md:space-x-6">
              <a href={lang === 'en' ? '/' : '/zh'} class="hover:text-gray-600 transition-colors hidden sm:block">
                {t('nav.home')}
              </a>
              <a href={lang === 'en' ? '/blog' : '/zh/blog'} class="hover:text-gray-600 transition-colors hidden sm:block">
                {t('nav.blog')}
              </a>
              <a href="https://chatollama.cloud" target="_blank" class="hover:text-gray-600 transition-colors">
                {t('nav.project')}
              </a>

              <!-- Language switcher -->
              <a
                href={lang === 'en' ? '/zh' + Astro.url.pathname : Astro.url.pathname.replace('/zh', '')}
                class="text-sm font-medium px-2 py-1 hover:bg-gray-100 rounded transition-colors"
                title={lang === 'en' ? 'Switch to Chinese' : 'Switch to English'}
              >
                {lang === 'en' ? '中' : 'EN'}
              </a>
            </div>
          </div>
        </nav>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t border-gray-200 mt-auto">
        <div class="max-w-4xl mx-auto px-6 py-8">
          <div class="text-center text-sm text-gray-600">
            © {new Date().getFullYear()} <a href="https://chatollama.cloud" target="_blank" class="hover:text-black transition-colors">ChatOllama</a>. Open source chatbot platform.
          </div>
        </div>
      </footer>
    </div>
  </body>
  <script>
    import { inject } from '@vercel/analytics';
    inject();
  </script>
</html>

<style is:global>
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }
</style>