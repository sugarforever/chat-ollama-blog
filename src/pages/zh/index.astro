---
import BaseLayout from '@/layouts/BaseLayout.astro';
import BlogCard from '@/components/BlogCard.astro';
import { getBlogPosts } from '@/utils/blog';
import { useTranslations } from '@/utils/i18n';

const t = useTranslations('zh');
const posts = await getBlogPosts('zh');
const latestPosts = posts.slice(0, 6);
---

<BaseLayout title="ChatOllama 博客 - 最新更新">
  <div class="max-w-4xl mx-auto px-6 py-12">
    <header class="mb-12 text-center">
      <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-6">
        {t('site.subtitle')}
      </p>
      <p class="text-base text-gray-500 max-w-2xl mx-auto mb-6">
        {t('meta.description')}
      </p>
      <div>
        <a href="https://chatollama.cloud" target="_blank" class="inline-flex items-center px-4 py-2 bg-black text-white rounded hover:bg-gray-800 transition-colors">
          体验 ChatOllama
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </a>
      </div>
    </header>

    <section>
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-semibold">{t('blog.latestPosts')}</h2>
        <a href="/zh/blog" class="text-sm font-medium hover:text-gray-600 transition-colors">
          {t('blog.allPosts')} →
        </a>
      </div>

      <div class="grid gap-6 md:grid-cols-2">
        {latestPosts.map((post) => (
          <BlogCard post={post} />
        ))}
      </div>
    </section>
  </div>
</BaseLayout>