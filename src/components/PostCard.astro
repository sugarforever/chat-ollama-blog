---
import type { BlogPost } from '../utils/posts';

interface Props {
  post: BlogPost;
  translationHref?: string;
}

const { post, translationHref } = Astro.props;
---
<article class="group relative flex h-full flex-col justify-between rounded-3xl border border-border bg-card/80 p-8 transition hover:-translate-y-1 hover:border-accent hover:shadow-card">
  <div class="flex flex-col gap-4">
    <time datetime={post.publishDate.toISOString()} class="text-xs uppercase tracking-[0.35em] text-muted">
      {post.formattedDate}
    </time>
    <h2 class="text-2xl font-semibold text-surface transition group-hover:text-accent">
      <a href={post.url} class="before:absolute before:inset-0">
        {post.title}
      </a>
    </h2>
    <p class="text-sm leading-relaxed text-muted">
      {post.description}
    </p>
  </div>
  <div class="mt-8 flex items-center justify-between text-xs font-medium uppercase tracking-[0.35em] text-accent">
    <span>Read</span>
    {translationHref && (
      <a href={translationHref} class="text-muted transition hover:text-accent">
        {post.lang === 'en' ? '中文版本' : 'English version'}
      </a>
    )}
  </div>
</article>
