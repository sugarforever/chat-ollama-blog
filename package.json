{
  "name": "chat-ollama-blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "pnpm lint:astro && pnpm lint:js && pnpm lint:md && pnpm lint:content",
    "lint:astro": "astro check",
    "lint:js": "eslint src --ext .ts,.tsx,.astro",
    "lint:md": "markdownlint-cli2 \"src/content/**/*.{md,mdx}\"",
    "lint:content": "remark src/content",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,astro,md,mdx,json,css}\"",
    "format:check": "prettier --check \"**/*.{js,ts,jsx,tsx,astro,md,mdx,json,css}\"",
    "test": "vitest"
  },
  "dependencies": {
    "@astrojs/mdx": "^3.1.1",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.5.1",
    "@astrojs/tailwind": "^5.1.1",
    "astro": "^4.12.0",
    "astro-icon": "^1.1.5",
    "clsx": "^2.1.1",
    "rehype-pretty-code": "^0.13.2",
    "remark-gfm": "^4.0.0",
    "remark-smartypants": "^2.0.0",
    "tailwindcss": "^3.4.10"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@eslint/js": "^9.35.0",
    "@tailwindcss/typography": "^0.5.15",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "astro-eslint-parser": "^1.2.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.34.0",
    "markdownlint-cli2": "^0.12.1",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "remark-cli": "^12.0.1",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-markdown-style-guide": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
